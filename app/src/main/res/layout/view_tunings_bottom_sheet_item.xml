<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="18dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tuningName"
            style="@style/AppTheme.BottomSheet.TextView"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:fontFamily="@font/spacegrotesk_bold"/>
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tuningNotes"
            style="@style/AppTheme.BottomSheet.TextView"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14dp"
            android:fontFamily="@font/spacegrotesk_semibold" />
    </LinearLayout>
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/activeModeIndicator"
        android:src="@drawable/ic_check"
        android:tint="@color/colorWhite"
        android:visibility="invisible"
        />
</LinearLayout>