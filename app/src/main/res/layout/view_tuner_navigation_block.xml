<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"> <!-- Navigation Block -->
    <ImageView
        android:id="@+id/navigationBlockActiveIndicator"
        android:layout_width="40dp"
        android:layout_height="6dp"
        android:tint="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_view_active_indicator"
        android:layout_marginBottom="-3dp"/>
    <LinearLayout
        android:id="@+id/navigationBlockRoot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/navigationBlockImage"
            android:layout_gravity="start|center_vertical"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:tint="@color/colorWhite"
            android:scaleType="fitCenter"
            app:srcCompat="@android:color/transparent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/navigationBlockAutomaticText"
                android:textSize="16dp"
                android:fontFamily="@font/spacegrotesk_bold"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:text="Tuning"
                android:layout_marginBottom="-4dp"/>
            <TextView
                android:id="@+id/navigationBlockSpecificText"
                android:textSize="16dp"
                android:fontFamily="@font/spacegrotesk_bold"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:text="Tuning" />
            <TextView
                android:id="@+id/navigationBlockGroupText"
                android:textSize="12dp"
                android:letterSpacing=".15"
                android:textAllCaps="true"
                android:fontFamily="@font/spacegrotesk_bold"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:textColor="@color/colorTextSecondary"
                android:text="Group" />
        </LinearLayout>
    </LinearLayout>
</merge>